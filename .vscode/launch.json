{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["norm", "./tests/input_1.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build active file"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
        },

         {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/bin/python3", /* My python3 path */
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "C Debug (wrapped, mock malloc)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/symnmf_wrap",
            "args": ["${input:goal}", "${input:inputFile}"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "environment": [
                { "name": "FAIL_MALLOC_AT", "value": "${input:failAt}" }
            ],
            "setupCommands": [
                { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true },
                { "description": "Intel asm", "text": "-gdb-set disassembly-flavor intel", "ignoreFailures": true },
                { "description": "Pending breakpoints", "text": "-gdb-set breakpoint pending on", "ignoreFailures": true },
                { "description": "Stop on SIGSEGV", "text": "handle SIGSEGV stop print nopass", "ignoreFailures": true }
            ],
        }

    ],
    "inputs":[
        {
      "id": "failAt",
      "type": "promptString",
      "description": "FAIL_MALLOC_AT (1 = fail on first allocation, blank for none)",
      "default": "1"
    },
    {
      "id": "goal",
      "type": "promptString",
      "description": "Goal (sym | ddg | norm)",
      "default": "norm"
    },
    {
      "id": "inputFile",
      "type": "promptString",
      "description": "Path to input dataset",
      "default": "./tests/input_1.txt"
    }
    ]
}